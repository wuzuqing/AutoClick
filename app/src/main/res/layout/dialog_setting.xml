<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#30000000"
    >

    <LinearLayout
        android:id="@+id/settingContainer"
        android:layout_width="match_parent"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-60dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="12dp"
        android:visibility="visible"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间间隔:"
                />

            <EditText
                android:id="@+id/et_space"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:hint="60"
                android:inputType="number"
                android:padding="2dp"
                android:textSize="14sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账号:"
                />

            <EditText
                android:id="@+id/et_height_user_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:hint="ck19656822,520333"
                android:maxLines="1"
                android:padding="2dp"
                android:singleLine="true"
                android:textSize="14sp"
                />
        </LinearLayout>


        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:background="@color/green"
            android:gravity="center"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="宽度比例:"
                />

            <EditText
                android:id="@+id/et_width_ratio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:hint="无效"
                android:padding="2dp"
                android:textSize="14sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="宴会编号:"
                />

            <EditText
                android:id="@+id/et_yan_hui_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:singleLine="true"
                android:gravity="center"
                android:text="12091951"
                android:padding="2dp"
                android:textSize="14sp"
                />

        </LinearLayout>


        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:background="@color/green"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="升级次数:"
                />

            <EditText
                android:id="@+id/et_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:hint=" 3"
                android:inputType="number"
                android:padding="2dp"
                android:textSize="14sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="限时位置:"
                />

            <EditText
                android:id="@+id/et_xs_position"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:inputType="number"
                android:gravity="center"
                android:hint="2"
                android:padding="2dp"
                android:textSize="14sp"
                />

        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:background="@color/green"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cb_loop"
                android:textSize="9sp"
                android:text="循环执行"
                />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cb_zw"
                android:textSize="9sp"
                android:text="政务"
                />

            <CheckBox
                android:id="@+id/cb_fl_only"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9sp"
                android:text="只领俸禄"
                />

            <CheckBox
                android:id="@+id/cb_fl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textSize="9sp"
                android:text="俸禄"
                />

            <CheckBox
                android:layout_width="wrap_content"
                android:id="@+id/cb_mb"
                android:textSize="9sp"
                android:layout_height="wrap_content"
                android:text="膜拜"
                />
            <CheckBox
                android:layout_width="wrap_content"
                android:id="@+id/cb_kf_bo"
                android:textSize="9sp"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:text="跨服膜拜"
                />
            <CheckBox
                android:layout_width="wrap_content"
                android:id="@+id/cb_gx"
                android:textSize="9sp"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:text="更新对话框"
                />
        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:background="@color/green"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <CheckBox
                android:layout_width="wrap_content"
                android:id="@+id/cb_shoucai"
                android:textSize="9sp"
                android:layout_height="wrap_content"
                android:text="收菜"
                />
            <CheckBox
                android:layout_width="wrap_content"
                android:id="@+id/cb_sy"
                android:textSize="9sp"
                android:layout_height="wrap_content"
                android:text="书院"
                />

            <CheckBox
                android:layout_width="wrap_content"
                android:id="@+id/cb_task"
                android:textSize="9sp"
                android:layout_height="wrap_content"
                android:text="任务"
                />
            <CheckBox
                android:layout_width="wrap_content"
                android:id="@+id/cb_guanka"
                android:textSize="9sp"
                android:layout_height="wrap_content"
                android:text="关卡"
                />
            <CheckBox
                android:layout_width="wrap_content"
                android:id="@+id/cb_yh"
                android:textSize="9sp"
                android:layout_height="wrap_content"
                android:text="宴会"
                />

        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:background="@color/green"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <CheckBox
                android:layout_width="wrap_content"
                android:id="@+id/cb_zc"
                android:textSize="9sp"
                android:layout_height="wrap_content"
                android:text="注册"
                />
            <CheckBox
                android:layout_width="wrap_content"
                android:id="@+id/cbXs"
                android:textSize="9sp"
                android:layout_height="wrap_content"
                android:text="限时"
                />
            <CheckBox
                android:layout_width="wrap_content"
                android:id="@+id/cbCj"
                android:textSize="9sp"
                android:layout_height="wrap_content"
                android:text="成就"
                />
            <CheckBox
                android:layout_width="wrap_content"
                android:id="@+id/cbZh"
                android:textSize="9sp"
                android:layout_height="wrap_content"
                android:text="主号"
                />
            <CheckBox
                android:layout_width="wrap_content"
                android:id="@+id/cbOsc"
                android:textSize="9sp"
                android:checked="true"
                android:visibility="visible"
                android:layout_height="wrap_content"
                android:text="旧收菜"
                />
        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:background="@color/green"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <CheckBox
                android:layout_width="wrap_content"
                android:id="@+id/cb_yx"
                android:textSize="9sp"
                android:layout_height="wrap_content"
                android:text="邮箱"
                />
            <CheckBox
                android:layout_width="wrap_content"
                android:id="@+id/cb_lm"
                android:textSize="9sp"
                android:layout_height="wrap_content"
                android:text="联盟高建"
                />
            <CheckBox
                android:layout_width="wrap_content"
                android:id="@+id/cb_lmfb"
                android:textSize="9sp"
                android:layout_height="wrap_content"
                android:text="联盟副本"
                />
            <CheckBox
                android:layout_width="wrap_content"
                android:id="@+id/cb_gy"
                android:textSize="9sp"
                android:layout_height="wrap_content"
                android:text="官宴"
                />
            <CheckBox
                android:layout_width="wrap_content"
                android:id="@+id/cb_kf_jl"
                android:textSize="9sp"
                android:layout_height="wrap_content"
                android:text="跨服奖励"
                />

        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:background="@color/green"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <CheckBox
                android:layout_width="wrap_content"
                android:id="@+id/cb_lf"
                android:textSize="9sp"
                android:layout_height="wrap_content"
                android:text="牢房"
                />
            <CheckBox
                android:layout_width="wrap_content"
                android:id="@+id/cb_hyzh"
                android:textSize="9sp"
                android:layout_height="wrap_content"
                android:text="红颜召唤"
                />
            <CheckBox
                android:layout_width="wrap_content"
                android:id="@+id/cb_ym"
                android:textSize="9sp"
                android:layout_height="wrap_content"
                android:text="衙门"
                />

        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:background="@color/green"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:onClick="help"
                android:text="查看使用教程"
                android:textSize="12sp"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="saveParams"
                android:text="保存设置"
                android:textSize="12sp"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="exit"
                android:text="退出辅助"
                android:textSize="12sp"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="#f00"
            android:text="温馨提示: 体验期间只能使用收菜功能,其他设置无效;\n如需开通其他功能,请联系技术支持\nQQ: 1052243597\n微信:wzq187159"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

</FrameLayout>